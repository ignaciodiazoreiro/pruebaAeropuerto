@model ProyectoCalidad.Models.Vuelo

@{
    ViewBag.Title = "Agregar vuelo";
}

<div class="jumbotron bg-light">
    <div class="container">
        <h1 class="display-4"> <i class="fas fa-plus"></i> Agregar un vuelo </h1>
    </div>

    <hr class="my-4">

</div>



@using (Html.BeginForm(new { @class = "row container" }))
{
    @Html.AntiForgeryToken()

   

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="col-6 mb-4    offset-4">
            @Html.LabelFor(model => model.idRutaFK, "Código de la ruta ", htmlAttributes: new { @class = "control-label   col-12" })
            <div class="input-group mb-2 col-12">
                <div class="input-group-prepend">
                    <div class="input-group-text"><i class="fas fa-road"></i></div>
                </div>
                @Html.DropDownList("idRutaFK", null, htmlAttributes: new { @class = "form-control" , id="routeCode" })
                @Html.ValidationMessageFor(model => model.idRutaFK, "", new { @class = "text-danger" })
            </div>
        </div>

         <div class="col-6 mb-4    offset-4">
            @Html.LabelFor(model => model.codigoAeropuertoFK, "Nombre del aeropuerto", htmlAttributes: new { @class = "control-label   col-12" })
            <div class="input-group mb-2 col-12">
                <div class="input-group-prepend">
                    <div class="input-group-text"><i class="fas fa-plane-departure"></i></div>
                </div>
                @Html.DropDownList("codigoAeropuertoFK", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.codigoAeropuertoFK, "", new { @class = "text-danger" })
            </div>
        </div>

         <div class="col-6 mb-4    offset-4">
            @Html.LabelFor(model => model.codigoVuelo, htmlAttributes: new { @class = "control-label   col-12" })
            <div class="input-group mb-2 col-12">
                <div class="input-group-prepend">
                    <div class="input-group-text"><i class="fas fa-barcode"></i></div>
                </div>
             @Html.EditorFor(model => model.codigoVuelo, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.codigoVuelo, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="col-6 mb-4    offset-4">
            @Html.LabelFor(model => model.fecha, htmlAttributes: new { @class = "control-label   col-12" })
            <div class="input-group mb-2 col-12">
                <div class="input-group-prepend">
                    <div class="input-group-text"><i class="fas fa-calendar-alt"></i></div>
                </div>
            @Html.EditorFor(model => model.fecha, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.fecha, "", new { @class = "text-danger" })
            </div>
        </div>

        
        <div class="col-6  mb-4    offset-4">
            @Html.LabelFor(model => model.cantidadRealPasajeros, htmlAttributes: new { @class = "control-label   col-12" })
            <div class="input-group mb-2 col-12">
                <div class="input-group-prepend">
                    <div class="input-group-text"><i class="fas fa-users"></i></div>
                </div>
              <input id="realPassengers" name="cantidadRealPasajeros" class = "form-control" type ="number"/>
              <label id="passengersError" class="text-danger col-12"> </label>
            </div>
        </div>

      

            <div class="col-6  mb-4    offset-5">
            <div class="input-group mb-2 col-12">
                 @Html.ActionLink("Cancelar", "Index",null, new { @class = "btn btn-danger mr-1 ml-4" })
                <input type="submit" value="Agregar" class="btn btn-success ml-3" id="createFBtn"/>
            </div>
        </div>
  
}

<div>
   
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
